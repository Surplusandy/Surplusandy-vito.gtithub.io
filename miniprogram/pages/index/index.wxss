/**index.wxss**/
.banner_body, .banner_item, image{
  width: 100%;
}
.p{
  margin-top: 6px;
  width: 100%;
  height: 40px;
  background-color: white;
}
text{
  line-height: 40px;
  margin-left: 40%;
  color: gray;
  font-size: 16px;
  background-color: white;
}
.container{
  margin: 40rpx;
  display: flex;
  flex-wrap: wrap;
}
.container .body{
  width: 180rpx;
  height: 168rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  margin: 20rpx;
  border-radius: 20rpx;

}
.container .body .icon{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: -20rpx;
  background-color: rgb(61, 94, 241);
  border: 4px solid white;
  box-shadow:0  0 3px 3px #f3f3f3;
}
.container .body .icon image{
  width: 60rpx;
  height: 60rpx;
}
.container .body text{
  margin-top: 74rpx;
  font-size: 10px;
  margin-left: 5px;
}
